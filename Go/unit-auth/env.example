# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=
DB_PASSWORD=
DB_NAME=unit_auth

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24
JWT_REFRESH_EXPIRATION=168  # 7天
JWT_REMEMBER_ME_EXPIRATION=720  # 30天

# RSA密钥配置（用于OAuth 2.0/OpenID Connect）
RSA_PRIVATE_KEY=
RSA_PUBLIC_KEY=

# OAuth 2.0配置
OAUTH_ISSUER=https://sso.yourcompany.com
OAUTH_AUTHORIZATION_ENDPOINT=/oauth/authorize
OAUTH_TOKEN_ENDPOINT=/oauth/token
OAUTH_USERINFO_ENDPOINT=/oauth/userinfo
OAUTH_REVOCATION_ENDPOINT=/oauth/revoke
OAUTH_INTROSPECTION_ENDPOINT=/oauth/introspect

# 默认SSO客户端配置
SSO_CLIENT_ID=default-client
SSO_CLIENT_SECRET=default-client-secret

# SMTP邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Google OAuth配置
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://sso.yourcompany.com/api/v1/auth/oauth/google/callback

# GitHub OAuth配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://sso.yourcompany.com/api/v1/auth/oauth/github/callback

# 微信OAuth配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_REDIRECT_URI=https://sso.yourcompany.com/api/v1/auth/wechat/callback

# Redis配置（用于缓存和限流）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 服务器配置
PORT=8080
HOST=0.0.0.0
GIN_MODE=debug

# 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# 监控配置
PROMETHEUS_ENABLED=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 会话配置
SESSION_TIMEOUT=3600
SESSION_AUTO_REFRESH=true 